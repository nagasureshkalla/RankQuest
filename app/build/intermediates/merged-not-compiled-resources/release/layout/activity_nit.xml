<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/silver"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Homepage.Eamcet"
    tools:layout_editor_absoluteY="81dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/examCardRadius"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <TextView
                android:id="@+id/tt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:singleLine="true"
                android:text="@string/aboutpgecet"
                android:textColor="#e68422"
                android:textSize="20dp" />
        </HorizontalScrollView>
    </com.google.android.material.card.MaterialCardView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:stretchColumns="*"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ic1"
                app:cardElevation="@dimen/cardElivation"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/examCardRadius"
                android:layout_width="151dp"
                android:layout_height="131dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cutoff" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ic2"
                android:layout_width="151dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/examCardRadius"
                app:cardElevation="@dimen/cardElivation"
                android:layout_height="131dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/colleges" />
            </com.google.android.material.card.MaterialCardView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ic3"
                app:cardElevation="@dimen/cardElivation"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/examCardRadius"
                android:layout_width="151dp"
                android:layout_height="131dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/checklist" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ic4"
                app:cardElevation="@dimen/cardElivation"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/examCardRadius"
                android:layout_width="151dp"
                android:layout_height="131dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/reports" />
            </com.google.android.material.card.MaterialCardView>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ic5"
                android:layout_width="151dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/cardElivation"
                app:cardCornerRadius="@dimen/examCardRadius"
                android:layout_height="131dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/branches" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ic6"
                android:layout_width="151dp"
                app:cardElevation="@dimen/cardElivation"
                app:cardCornerRadius="@dimen/examCardRadius"
                app:cardUseCompatPadding="true"
                android:layout_height="131dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/statatics" />
            </com.google.android.material.card.MaterialCardView>
        </TableRow>
    </TableLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <!--  <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:id="@+id/adViewEamcet"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              ads:adSize="BANNER"
              ads:adUnitId="ca-app-pub-1002768150287472/2143682922"/>-->
    </androidx.cardview.widget.CardView>
</LinearLayout>